rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
      allow list: if request.auth.uid != null;
      
      match /event_enrollments/{enrollmentId} {
        allow read, create, update, delete: if request.auth.uid == userId;
      }

      match /daily_bonus_claims/{claimId} {
        allow read, create: if request.auth.uid == userId;
      }
    }

    match /game_rooms/{roomId} {
      allow read: if true; // Public rooms can be read by anyone
      allow create: if request.auth.uid == request.resource.data.createdBy.uid;
      allow update: if request.auth.uid != null;
      
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in resource.data.players;
      }
    }
    
    match /events/{eventId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow list: if request.auth.uid != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /marketing_applications/{applicationId} {
      allow create: if true;
      allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /bonuses/{bonusId} {
        allow read, list: if true;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /dailyBonusClaims/{counterId} {
        allow read: if true;
        allow update: if request.auth.uid != null;
    }
    
    match /chats/{chatId} {
      allow read, update, create: if request.auth.uid in resource.data.users;
      match /messages/{messageId} {
         allow read, create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
      }
    }
    
    match /notifications/{notificationId} {
        allow read, update: if request.auth.uid == resource.data.userId;
        allow create: if true;
    }

    match /settings/{settingId} {
        allow read: if true;
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /transactions/{transactionId} {
      // Users can create their own transactions (deposit, withdrawal requests)
      allow create: if request.auth.uid == request.resource.data.userId;
      // Users can read their own transaction history
      allow read: if request.auth.uid == resource.data.userId;
      // Admins can update transactions (approve/reject) and read any of them
      allow update, read, list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
