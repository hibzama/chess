
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
      
      // Allow users to manage their own subcollections
      match /active_campaigns/{campaignId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
      match /bonus_claims/{claimId} {
          allow read, write: if request.auth.uid == userId;
      }
      match /daily_bonus_claims/{claimId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /game_rooms/{roomId} {
        allow read: if true;
        allow create: if request.auth.uid != null;
        allow update: if request.auth.uid != null;
        allow delete: if request.auth.uid == get(/databases/$(database)/documents/game_rooms/$(roomId)).data.createdBy.uid;
    }
    
    match /transactions/{transactionId} {
        allow read, create: if request.auth.uid != null;
        allow update: if isAdmin();
    }
    
    match /notifications/{notificationId} {
        allow read, update: if request.auth.uid == resource.data.userId;
        allow create: if request.auth.uid != null;
    }
    
    match /chats/{chatId} {
        allow read, update, create: if request.auth.uid in resource.data.userIds;
        
        match /messages/{messageId} {
            allow read, create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
        }
    }

    // Admin Rules
    match /marketing_applications/{appId} {
        allow read, write: if isAdmin();
    }
    match /settings/{settingId} {
        allow read, write: if request.auth.uid != null && isAdmin();
    }

    // Bonus and Campaign Rules
    match /signup_bonus_campaigns/{campaignId} {
      allow get, list: if request.auth.uid != null;
      allow write: if isAdmin();
      match /claims/{claimId} {
        allow read, write: if request.auth.uid != null; // Claims are validated in backend
      }
    }
    
    match /deposit_bonus_campaigns/{campaignId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
      match /claims/{claimId} {
        allow read, write: if request.auth.uid != null;
      }
    }

    match /daily_bonus_campaigns/{campaignId} {
      allow get, list: if request.auth.uid != null;
      allow write: if isAdmin();
      match /claims/{claimId} {
          allow read, write: if request.auth.uid != null;
      }
    }

    match /referral_campaigns/{campaignId} {
      allow get, list: if request.auth.uid != null;
      allow write: if isAdmin();
    }
    
    match /bonus_claims/{claimId} {
        allow read, create, update: if request.auth.uid != null;
    }
  }
}
