rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read/write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow anyone to create a marketing application
    match /marketing_applications/{appId} {
        allow create: if true;
    }
    
    // Allow any authenticated user to read game rooms and settings
    match /game_rooms/{roomId} {
        allow read: if request.auth != null;
    }
    
    // This is the critical fix: Allow any authenticated user (which includes
    // server-side processes like Genkit) to read the settings. Write access
    // is restricted to admins on the client-side.
    match /settings/{docId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Allow read access for events, bonuses
    match /events/{eventId} {
        allow read: if request.auth != null;
    }
     match /bonuses/{bonusId} {
        allow read: if request.auth != null;
    }
     match /dailyBonusClaims/{claimId} {
        allow read: if request.auth != null;
    }

    // Allow authenticated users to manage their own enrollments
    match /users/{userId}/event_enrollments/{enrollmentId} {
        allow read, write: if request.auth.uid == userId;
    }
    
    // Allow authenticated users to manage their own bonus claims
    match /users/{userId}/daily_bonus_claims/{claimId} {
        allow read, write: if request.auth.uid == userId;
    }
    
    // Allow players in a chat to read/write messages
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in resource.data.users;
    }
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if get(/databases/$(database)/documents/chats/$(chatId)).data.users[request.auth.uid].exists == true;
    }

    // Admins can read/write all transactions, users can only read their own.
    match /transactions/{transactionId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || resource.data.userId == request.auth.uid;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if request.auth != null;
    }
    
    // Allow admins to read all notifications
    match /notifications/{notificationId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || resource.data.userId == request.auth.uid;
    }

  }
}