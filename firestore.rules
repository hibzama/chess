rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isUser() {
        return request.auth != null;
    }

    // Users Collection
    // - Users can read any single user document (for profiles, leaderboards, etc.)
    // - Users can only write to their own document.
    // - Admins can read/write any user document.
    match /users/{userId} {
      allow get: if isUser() || isAdmin();
      allow list: if isAdmin(); // Only admins can list all users
      allow write: if isOwner(userId) || isAdmin();

      // Subcollections for users
      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Game Rooms
    // - Any user can list/read game rooms (for lobbies)
    // - Any user can create a game room
    // - Only players in the game or admins can write to a game room
    match /game_rooms/{roomId} {
      allow read, create: if isUser() || isAdmin();
      allow update, delete: if (isUser() && resource.data.createdBy.uid == request.auth.uid) || isAdmin();
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if isUser() && request.auth.uid in resource.data.players;
      }
    }

    // Transactions
    // - Users can create transactions for themselves
    // - Users can read their own transactions
    // - Admins have full access
    match /transactions/{transactionId} {
       allow create: if isUser() && request.resource.data.userId == request.auth.uid;
       allow read, write: if (isUser() && resource.data.userId == request.auth.uid) || isAdmin();
    }
    
    // Notifications
    match /notifications/{notificationId} {
        allow read, write: if (isUser() && resource.data.userId == request.auth.uid) || isAdmin();
    }

    // Marketing Applications
    // - Anyone can create an application
    // - Only admins can read/write
    match /marketing_applications/{appId} {
        allow create: if true;
        allow read, write: if isAdmin();
    }
    
    // Settings collection (e.g., mailer config)
    // - Only Admins can read/write
    match /settings/{settingId} {
        allow read, write: if isAdmin();
    }

    // Bonus Campaigns & Claims
    // - All users can read campaign documents
    // - Claims subcollections are only writable by admins (implicitly via Cloud Functions)
    match /{campaignCollection}/{campaignId} {
      allow read: if isUser() || isAdmin();
      allow write: if isAdmin(); // Only admins can create/update campaigns
      
      match /claims/{claimId} {
         allow read, write: if (isUser() && request.auth.uid == claimId) || isAdmin();
      }
    }
    
     match /bonus_claims/{claimId} {
        allow read, write: if isUser() || isAdmin();
     }
  }
}
