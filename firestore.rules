
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isPlayerInRoom(roomId) {
    	return request.auth != null && request.auth.uid in get(/databases/$(database)/documents/game_rooms/$(roomId)).data.players;
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/{subcollection}/{docId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /game_rooms/{roomId} {
    	allow read: if true;
      allow create: if isOwner(request.resource.data.createdBy.uid);
      
      // Allow joining a game or updating it during play
      allow update: if isPlayerInRoom(roomId);
      
      allow delete: if isOwner(resource.data.createdBy.uid);
      
      match /messages/{messageId} {
        allow read, write: if isPlayerInRoom(roomId);
      }
    }
    
    match /friend_requests/{requestId} {
      allow read: if isOwner(resource.data.fromId) || isOwner(resource.data.toId);
      allow create: if isOwner(request.resource.data.fromId);
      allow delete: if isOwner(resource.data.fromId) || isOwner(resource.data.toId);
    }
    
    match /notifications/{notificationId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if request.auth != null; // Allow any authenticated user to create (e.g., friend requests)
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /marketing_applications/{appId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    match /transactions/{txId} {
      allow read, list: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isAdmin();
    }
    
    match /bonuses/{bonusId} {
       allow read: if true;
       allow write: if isAdmin();
    }
    
    match /dailyBonusClaims/{bonusId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow any logged-in user to claim (transaction validates details)
    }

    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
