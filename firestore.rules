
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read: if request.auth != null || isAdmin();
      allow create, update: if request.auth.uid == userId; // Allow user to create/update their own document.
      
      // Allow a user to update another user's l1Count for referrals
      allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['l1Count']);
      
      allow delete: if isAdmin();

      // Subcollections
      match /{allPaths=**} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }

    match /game_rooms/{roomId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.createdBy.uid || (request.auth.uid in resource.data.players) || isAdmin();
      
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/game_rooms/$(roomId)).data.players;
      }
    }
    
    match /transactions/{transactionId} {
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow create: if request.auth.uid == request.resource.data.userId || isAdmin();
      allow update, delete: if isAdmin();
    }
    
    match /marketing_applications/{appId} {
        allow create: if request.auth != null;
        allow read, update, delete: if isAdmin();
    }

    match /settings/{settingId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    match /notifications/{notificationId} {
        allow read, update: if request.auth.uid == resource.data.userId;
        allow create, delete: if isAdmin(); // Or allow specific functions to create them
    }

    match /daily_bonus_campaigns/{campaignId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
        
        match /claims/{claimId} {
            allow read, create: if request.auth != null;
            allow write: if isAdmin();
        }
    }
    
    match /signup_bonus_campaigns/{campaignId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    match /deposit_bonus_campaigns/{campaignId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();

         match /claims/{claimId} {
            allow read: if request.auth.uid == resource.data.userId || isAdmin();
            allow create: if request.auth != null; // Server or trusted client creates this
            allow write: if isAdmin();
        }
    }

    match /referral_campaigns/{campaignId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    match /bonus_claims/{claimId} {
        // Users can see their own claims
        allow read: if request.auth.uid == resource.data.userId || isAdmin();
        allow list: if (request.auth.uid == request.query.where.userId && request.query.where.type == 'referrer') || isAdmin();

        // Allow users to create claims for themselves, but only admins can approve/reject.
        allow create: if request.auth.uid == request.resource.data.userId;
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }
  }
}
