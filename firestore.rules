rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;

      // Users can read their own subcollections.
      match /{subcollection}/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      match /event_enrollments/{eventId}/progress_history/{progressId} {
        allow read: if request.auth.uid == userId;
      }
    }

    // Publicly readable collections
    match /events/{eventId} {
      allow read: if true;
    }
    match /bonuses/{bonusId} {
        allow read: if true;
    }
    
    // Game rooms can be read by anyone, but only written to by players in the game.
    match /game_rooms/{gameId} {
        allow read: if true;
        allow write: if request.auth.uid in resource.data.players;
        
        match /messages/{messageId} {
            allow read: if request.auth.uid in get(/databases/$(database)/documents/game_rooms/$(gameId)).data.players;
            allow create: if request.auth.uid in get(/databases/$(database)/documents/game_rooms/$(gameId)).data.players;
        }
    }
    
    match /dailyBonusClaims/{bonusId} {
        allow read: if true;
        // Writes are handled by Cloud Functions
    }

    // Admins can read/write anything
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
