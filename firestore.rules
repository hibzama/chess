
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isUser(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }

    // Admin full access
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Allow public read for specific, non-sensitive collections
    match /game_rooms/{roomId} {
      allow read: if true;
    }
    
    match /users/{userId} {
        // A user can update their own document
        allow update, write: if isUser(userId);
        // Any authenticated user can read a user's public profile data
        allow read: if request.auth != null;
    }
    
    match /marketing_applications/{appId} {
        allow create: if true;
    }
    
    // The server-side mailer needs to read this config.
    // It contains no sensitive data.
    match /settings/mailerConfig {
      allow read: if true;
    }
    
    // Allow authenticated users to manage their own transactions and friend requests
    match /transactions/{transactionId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    match /friend_requests/{requestId} {
        allow read, create, delete: if request.auth != null;
    }
  }
}
