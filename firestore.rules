rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isUser(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAuth() {
      return request.auth != null;
    }

    // USER rules
    match /users/{userId} {
      // Allow any authenticated user to read any user's profile data for leaderboards, friend lists, etc.
      // Allow authenticated users to list users for search and marketing dashboard queries.
      allow list, get: if isAuth();

      // Only a user can update their own document, and only specific fields.
      allow update: if isUser(userId) &&
                      request.resource.data.keys().hasAll(['firstName', 'lastName', 'phone', 'address', 'city', 'country', 'gender', 'photoURL']) &&
                      request.resource.data.size() == 8;

      // Only a user can create their own document upon registration.
      allow create: if isUser(userId);
      
      match /{subcollection}/{docId} {
        allow read, write: if isUser(userId) || isAdmin();
      }
    }

    // GAME_ROOMS rules
    match /game_rooms/{roomId} {
      allow read: if isAuth();
      allow create: if isAuth() && request.resource.data.createdBy.uid == request.auth.uid;
      allow update: if isAuth();
      allow delete: if isAuth() && resource.data.createdBy.uid == request.auth.uid;
      
      match /messages/{messageId} {
        allow read, create: if isAuth() && request.auth.uid in resource.data.players;
      }
    }

    // TRANSACTIONS rules
    match /transactions/{transactionId} {
      allow read: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuth();
      allow update, delete: if isAdmin();
    }

    // BONUS & CAMPAIGN rules
    match /signup_bonus_campaigns/{campaignId} {
      allow list, read: if isAuth();
      allow write: if isAdmin();
      match /claims/{claimId} {
        allow read, write: if isAuth();
      }
    }
    
    match /deposit_bonus_campaigns/{campaignId} {
        allow list, read: if isAuth();
        allow write: if isAdmin();
         match /claims/{claimId} {
            allow read, write: if isAuth();
         }
    }

    match /referral_campaigns/{campaignId} {
      allow list, read: if isAuth();
      allow write: if isAdmin();
    }
    
     match /tasks/{taskId} {
      allow list, read: if isAuth();
      allow write: if isAdmin();
    }

    match /bonus_claims/{claimId} {
        allow read: if isAuth();
        allow create: if isAuth();
        allow update: if isAdmin();
    }

    // MARKETING rules
    match /marketing_applications/{appId} {
      allow read: if isAdmin();
      // Allow anyone to submit an application
      allow create: if true;
      allow update: if isAdmin();
    }

    // NOTIFICATIONS rules
    match /notifications/{notificationId} {
      allow read, update: if isAuth() && resource.data.userId == request.auth.uid;
      allow create: if isAuth();
    }

    // CHATS rules
    match /chats/{chatId} {
      allow read, update: if isAuth() && request.auth.uid in resource.data.userIds;
      allow create: if isAuth();

      match /messages/{messageId} {
        allow read, create: if isAuth() && get(/databases/$(database)/documents/chats/$(chatId)).data.userIds.hasAny([request.auth.uid]);
      }
    }
    
    match /friend_requests/{requestId} {
        allow read: if isAuth() && (resource.data.toId == request.auth.uid || resource.data.fromId == request.auth.uid);
        allow create: if isAuth() && request.resource.data.fromId == request.auth.uid;
        allow delete: if isAuth() && (resource.data.toId == request.auth.uid || resource.data.fromId == request.auth.uid);
    }

    // SETTINGS rules
    match /settings/{settingId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
  }
}