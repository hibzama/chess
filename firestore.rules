
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isNewUser() {
      return isAuth() && !exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Collections
    match /users/{userId} {
      allow read: if isAuth();
      allow write: if isUser(userId) || isAdmin();
      
      // Subcollections
      match /{allChildren=**} {
        allow read, write: if isUser(userId) || isAdmin();
      }
    }

    match /game_rooms/{roomId} {
      allow read: if isAuth(); // Allow any authenticated user to read room data
      allow create: if isAuth() && request.resource.data.createdBy.uid == request.auth.uid;
      allow update, delete: if isAuth() && request.auth.uid in resource.data.players;
      
      match /messages/{messageId} {
        allow read, write: if isAuth() && request.auth.uid in get(/databases/$(database)/documents/game_rooms/$(roomId)).data.players;
      }
    }

    match /chats/{chatId} {
      allow read, write: if isAuth() && request.auth.uid in resource.data.userIds;
      
      match /messages/{messageId} {
        allow read, write: if isAuth() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
      }
    }
    
    match /transactions/{transactionId} {
      allow read, write: if isAuth();
    }
    
    match /marketing_applications/{appId} {
        allow read: if isAdmin();
        allow create: if isAuth();
        allow update: if isAdmin();
    }
    
    match /settings/{settingId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /notifications/{notificationId} {
        allow read, write: if isAuth();
    }
    
    match /bonus_claims/{claimId} {
        allow read, write: if isAuth();
    }
    
     match /daily_bonus_campaigns/{campaignId} {
      allow read: if isAuth();
      allow create, update, delete: if isAdmin();
      
       match /claims/{claimId} {
        allow read: if isAdmin();
        allow create: if isAuth() && request.auth.uid == claimId;
      }
    }
    
     match /referral_campaigns/{campaignId} {
      allow read: if isAuth();
      allow create, update, delete: if isAdmin();
    }
  }
}
