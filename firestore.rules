rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function isUser(userId) {
        return request.auth != null && request.auth.uid == userId;
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read, write: if isUser(userId) || isAdmin();
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /game_rooms/{roomId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && (request.auth.uid == resource.data.createdBy.uid || isAdmin());
    }

    match /marketing_applications/{appId} {
        allow create: if true;
        allow read, write: if isAdmin();
    }
    
    match /transactions/{txId} {
        allow read: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.userId);
        allow create: if request.auth != null;
        allow update: if isAdmin();
    }

    match /signup_bonus_campaigns/{campaignId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /deposit_bonus_campaigns/{campaignId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
     match /deposit_bonus_campaigns/{campaignId}/claims/{claimId} {
        allow create, read: if request.auth != null;
        allow write: if isAdmin();
    }

     match /referral_campaigns/{campaignId} {
        allow read: if true;
        allow write: if isAdmin();
    }

     match /tasks/{taskId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /bonus_claims/{claimId} {
        allow create, read: if request.auth != null;
        allow write: if isAdmin();
    }
    
     match /notifications/{notificationId} {
        allow read, write, create: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
     match /chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid in resource.data.userIds;
        match /messages/{messageId} {
             allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
        }
    }
    
    match /languages/{languageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

  }
}
