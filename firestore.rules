rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if a user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Function to check if the user is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Admin has full access to everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Users collection rules
    match /users/{userId} {
      // Admins can access any user document (covered by global admin rule)
      // Users can read and write to their own document
      allow read, update, delete: if isOwner(userId);
      // Allow any authenticated user to create their own user document during sign-up
      allow create: if request.auth != null;
    }

    // Game rooms rules
    match /game_rooms/{roomId} {
      // Anyone can read public rooms
      allow read: if request.auth != null;
      // Only authenticated users can create rooms
      allow create: if request.auth != null;
      // Only players in the room can update it
      allow update: if request.auth != null && request.auth.uid in resource.data.players;
      // Only the creator can delete a waiting room
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy.uid;
    }
    
    // Transactions rules
    match /transactions/{transactionId} {
      // Users can create their own transactions
      allow create: if isOwner(request.resource.data.userId);
      // Users can only read their own transactions
      allow read: if isOwner(resource.data.userId);
    }
    
    // Bonus claims rules
    match /bonus_claims/{claimId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isOwner(resource.data.userId);
    }

    // Marketing applications rules
    match /marketing_applications/{appId} {
        // Anyone can apply
        allow create: if request.auth == null || request.auth != null;
    }

    // Publicly readable collections for all authenticated users
    match /languages/{docId} {
      allow read: if request.auth != null;
      // Write access is handled by the global admin rule
    }

    match /settings/{settingId} {
        allow read: if request.auth != null;
    }

    match /referral_campaigns/{campaignId} {
        allow read: if request.auth != null;
    }
    
    match /tasks/{taskId} {
        allow read: if request.auth != null;
    }
    
     match /deposit_bonus_campaigns/{campaignId} {
        allow read: if request.auth != null;
    }

    match /signup_bonus_campaigns/{campaignId} {
        allow read: if request.auth != null;
    }
  }
}