rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }
    
    match /marketing_applications/{appId} {
      allow create: if request.auth == null;
    }
    
    match /deposit_bonus_campaigns/{campaignId} {
      allow read: if request.auth != null;
    }
    
    match /daily_bonus_campaigns/{campaignId} {
      allow read: if request.auth != null;
    }
    
    match /referral_campaigns/{campaignId} {
      allow read: if request.auth != null;
    }
    
    match /transactions/{txId} {
        allow read: if request.auth.uid == resource.data.userId;
    }
    
    match /game_rooms/{roomId} {
        allow read: if request.auth.uid in resource.data.players;
    }
    
    match /friend_requests/{reqId} {
        allow read: if request.auth.uid == resource.data.toId || request.auth.uid == resource.data.fromId;
    }
    
    match /notifications/{notifId} {
        allow read: if request.auth.uid == resource.data.userId;
    }
    
     match /{path=**}/bonus_claims/{claimId} {
      allow read: if request.auth.uid == resource.data.userId;
    }
  }
}
