rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /languages/{languageId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }

    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    match /users/{userId}/active_campaigns/{campaignId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    match /transactions/{transactionId} {
      allow read, create: if request.auth != null;
      allow update: if request.auth != null && request.auth.token.admin == true;
    }

    match /game_rooms/{roomId} {
      allow read, create;
      allow update, delete: if request.auth != null;
    }

    match /game_rooms/{roomId}/messages/{messageId} {
      allow read, create: if request.auth != null;
    }

    match /friend_requests/{requestId} {
        allow read, create, delete: if request.auth != null;
    }
    
    match /notifications/{notificationId} {
        allow read, create, update: if request.auth != null;
    }
    
    match /marketing_applications/{appId} {
        allow create;
        allow read, update: if request.auth != null && request.auth.token.admin == true;
    }
    
    match /signup_bonus_campaigns/{campaignId} {
        allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    match /deposit_bonus_campaigns/{campaignId} {
        allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

     match /deposit_bonus_campaigns/{campaignId}/claims/{claimId} {
        allow read, write: if request.auth != null;
    }

    match /daily_bonus_campaigns/{campaignId} {
        allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    match /referral_campaigns/{campaignId} {
        allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    match /tasks/{taskId} {
         allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    match /bonus_claims/{claimId} {
        allow read, write: if request.auth != null;
    }

    match /settings/{settingId} {
       allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

  }
}
