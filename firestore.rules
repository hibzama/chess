
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // UTILITY: Check if user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USER-SPECIFIC RULES
    match /users/{userId} {
      // Allow users to read their own data, and admins to read any user
      allow get: if request.auth.uid == userId || isAdmin();
      // Allow any authenticated user to read any user profile (for referrals, profiles, etc.)
      allow list: if request.auth != null;
      // Allow users to update only their own document
      allow update: if request.auth.uid == userId;
      // Allow users to create their own document (signup)
      allow create: if request.auth.uid == userId;
      
      // Subcollections
      match /active_campaigns/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /bonus_claims/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /daily_bonus_claims/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // ADMIN-ONLY
    match /settings/{docId} {
        allow read, write: if isAdmin();
    }

    match /marketing_applications/{appId} {
        allow read, create: if request.auth != null;
        allow update: if isAdmin();
    }
    
    // BONUS CAMPAIGNS (Signup, Daily, Deposit, Referral)
    match /signup_bonus_campaigns/{campaignId} {
      allow read, write: if isAdmin();
      match /claims/{claimId} {
        allow create: if request.auth.uid == claimId;
        allow read: if isAdmin();
      }
    }
    
    match /daily_bonus_campaigns/{campaignId} {
      allow read, write: if isAdmin();
      match /claims/{claimId} {
        allow create: if request.auth.uid == claimId;
        allow read: if isAdmin();
      }
    }
    
    match /deposit_bonus_campaigns/{campaignId} {
      allow read, write: if isAdmin();
      match /claims/{claimId} {
        allow create: if request.auth.uid == claimId;
        allow read: if isAdmin();
      }
    }

    match /referral_campaigns/{campaignId} {
      // Allow any authenticated user to read campaigns
      allow get, list: if request.auth != null;
      // Allow admins to modify campaigns
      allow write: if isAdmin();
    }

    // GAME ROOMS
    match /game_rooms/{roomId} {
      allow read: if request.auth != null;
      // Allow create for any authenticated user
      allow create: if request.auth != null;
      // Allow joining (updating a waiting room)
      allow update: if request.auth != null && resource.data.status == 'in-progress' && request.resource.data.status == 'in-progress' && request.auth.uid in resource.data.players;
      // Allow deletion only by the creator when room is waiting
      allow delete: if request.auth.uid == resource.data.createdBy.uid && resource.data.status == 'waiting';
      
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/game_rooms/$(roomId)).data.players;
      }
    }

    // TRANSACTIONS & CLAIMS
    match /transactions/{transactionId} {
      allow read, create: if request.auth != null;
    }

    // Allow admins to see all bonus claims from all users via collectionGroup query
    // Allow users to create their own claims.
    match /{path=**}/bonus_claims/{claimId} {
       allow read, delete: if isAdmin();
       allow create: if request.auth.uid == request.resource.data.userId;
       allow update: if request.auth.uid == request.resource.data.userId || isAdmin();
    }
  }
}
