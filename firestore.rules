
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only be created by anyone (for signup), but can only be
    // read or updated by the authenticated user themselves.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Settings can only be read by authenticated users, but not written to.
    match /settings/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Only authenticated users can manage their own friend requests.
    match /friend_requests/{requestId} {
        allow read, delete: if request.auth != null && request.auth.uid == resource.data.fromId;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.fromId;
    }

    // Chat messages can be created by anyone in the chat, but not deleted.
    match /chats/{chatId}/messages/{messageId} {
        allow create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
        allow update, delete: if false;
    }
     match /chats/{chatId} {
        allow read, update: if request.auth != null && request.auth.uid in resource.data.userIds;
        allow create: if request.auth != null;
    }

    // Game rooms can be read by anyone, but only updated by players in the game.
    match /game_rooms/{roomId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid in resource.data.players;
        allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy.uid;
    }
    
     // Chat messages can be created by anyone in the chat, but not deleted.
    match /game_rooms/{roomId}/messages/{messageId} {
        allow create, read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/game_rooms/$(roomId)).data.players;
        allow update, delete: if false;
    }

    // Marketing applications can only be created. No one can read them.
    match /marketing_applications/{appId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Transactions can only be created by the user they belong to.
    match /transactions/{txId} {
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow read, update, delete: if false;
    }
    
    // Bonus claims can only be created by the user they belong to.
     match /bonus_claims/{claimId} {
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow read, update, delete: if false;
    }

  }
}
