rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isUser(userId) {
      return exists(/databases/$(database)/documents/users/$(userId));
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read: if true;
      // Allow users to update their own data, or admins to update any user
      allow update: if request.auth.uid == userId || isAdmin();
      // Allow users to create their own document on signup
      allow create: if request.auth.uid == userId;
    }
    
    match /users/{userId}/event_enrollments/{enrollmentId} {
        allow read, write: if request.auth.uid == userId;
    }
    
    match /event_enrollments/{eventId}/users/{userId} {
        allow create, write: if request.auth.uid == userId;
    }

    match /game_rooms/{roomId} {
      allow read: if true;
      allow create: if request.auth.uid == request.resource.data.createdBy.uid;
      // Allow updates if user is already in the game OR is joining a waiting game
      allow update: if request.auth.uid in resource.data.players 
                      || (resource.data.status == 'waiting' && !(request.auth.uid in resource.data.players))
                      || isAdmin();
      allow delete: if request.auth.uid == resource.data.createdBy.uid || isAdmin();
    }

    match /transactions/{transactionId} {
        allow read: if request.auth.uid == resource.data.userId || isAdmin();
        allow create: if request.auth.uid == request.resource.data.userId || isAdmin();
        allow update: if isAdmin();
    }
    
    match /marketing_applications/{appId} {
        allow create: if true;
        allow read, write: if isAdmin();
    }
    
    match /settings/{settingId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
     match /events/{eventId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    match /bonuses/{bonusId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    match /dailyBonusClaims/{bonusId} {
        allow read: if true;
        allow write: if request.auth != null; // User needs to be able to increment
    }

    match /notifications/{notificationId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    match /chats/{chatId} {
        allow read, write: if request.auth.uid in resource.data.users;
    }

    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
    }
  }
}
