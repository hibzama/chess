rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow reading user data for profiles and referral tracking
      allow get, list: if request.auth != null; 
      allow write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Allow users to manage their own subcollections
      match /active_campaigns/{docId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
      match /daily_bonus_claims/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /bonus_claims/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Rules for game rooms
    match /game_rooms/{roomId} {
      allow read, write: if request.auth != null;
    }
    match /game_rooms/{roomId}/messages/{messageId} {
      allow read, write: if request.auth != null && (request.auth.uid in get(/databases/$(database)/documents/game_rooms/$(roomId)).data.players);
    }
    
    // Rules for chat
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in resource.data.userIds;
    }
    match /chats/{chatId}/messages/{messageId} {
       allow read, write: if get(/databases/$(database)/documents/chats/$(chatId)).data.userIds[0] == request.auth.uid || get(/databases/$(database)/documents/chats/$(chatId)).data.userIds[1] == request.auth.uid;
    }
    
    // Rules for various bonus claims
    match /{path=**}/bonus_claims/{claimId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Rules for campaigns
    match /referral_campaigns/{campaignId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /signup_bonus_campaigns/{campaignId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        match /claims/{claimId} {
             allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || request.auth.uid == claimId;
        }
    }
    match /daily_bonus_campaigns/{campaignId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        match /claims/{claimId} {
             allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || request.auth.uid == claimId;
        }
    }
    match /deposit_bonus_campaigns/{campaignId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        match /claims/{claimId} {
             allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || request.auth.uid == claimId;
        }
    }
    
    // Admin specific rules
    match /transactions/{txId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || request.auth.uid == resource.data.userId;
    }
    match /marketing_applications/{appId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /settings/{settingId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}