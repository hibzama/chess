rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own document
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Admins have full access to user data
    match /users/{userId} {
      allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for game rooms
    match /game_rooms/{roomId} {
      allow read: if true; // Publicly readable for lobbies
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.createdBy.uid == request.auth.uid || resource.data.player2.uid == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow delete: if isSignedIn() && resource.data.createdBy.uid == request.auth.uid;
      
      match /messages/{messageId} {
        allow read, create: if isSignedIn();
      }
    }
    
    // Admins can manage all transactions
    match /transactions/{transactionId} {
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users can create transactions for themselves (deposit/withdrawal requests)
    match /transactions/{transactionId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Users can only read their own transactions
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Admins can manage marketing applications
    match /marketing_applications/{appId} {
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow create: if true; // Anyone can apply
    }
    
    match /chats/{chatId} {
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.userIds;
      match /messages/{messageId} {
        allow read, create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
      }
    }
    
    match /notifications/{notificationId} {
      allow read, update: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /settings/{settingId} {
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /signup_bonus_campaigns/{campaignId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /bonus_claims/{claimId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
