rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    // Admins can read/write any document in any collection
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can read the list of languages
    match /languages/{languageId} {
      allow read: if request.auth != null;
    }
    
    // Other collections can be added here with specific rules
    // Example for game rooms if needed later:
    // match /game_rooms/{roomId} {
    //   allow read: if request.auth != null;
    //   allow write: if request.auth != null; // Or more specific logic
    // }
  }
}
