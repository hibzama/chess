rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }

    // TRANSACTIONS
    match /transactions/{transactionId} {
      allow read, write: if isAuth() || isAdmin();
    }
    
    // NOTIFICATIONS
    match /notifications/{notificationId} {
      allow read, update: if isAuth() && isOwner(resource.data.userId);
      allow create: if isAuth(); // Functions can create for anyone
    }

    // GAME ROOMS
    match /game_rooms/{roomId} {
      allow read; 
      allow create: if isAuth();
      allow update: if isAuth() && request.auth.uid in resource.data.players;
      allow delete: if isAuth() && request.auth.uid == resource.data.createdBy.uid;
    }
    
    // GAME CHAT MESSAGES
    match /game_rooms/{roomId}/messages/{messageId} {
      allow read: if isAuth(); // Simplified for now
      allow create: if isAuth() && request.auth.uid in get(/databases/$(database)/documents/game_rooms/$(roomId)).data.players;
    }

    // CHATS
    match /chats/{chatId} {
        allow read, update: if isAuth() && request.auth.uid in resource.data.users;
        allow list: if isAuth(); // Allows querying for user's own chats
    }
    match /chats/{chatId}/messages/{messageId} {
        allow read, create: if isAuth() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
    }

    // MARKETING APPLICATIONS
    match /marketing_applications/{appId} {
      allow create;
      allow read, update, delete: if isAdmin();
    }
    
    // SETTINGS (e.g., Mailer, Bonuses)
    match /settings/{settingId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    // BONUSES
    match /bonuses/{bonusId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
    match /dailyBonusClaims/{bonusId} {
        allow read: if isAuth();
        allow write: if isAuth() || isAdmin();
    }
     match /users/{userId}/daily_bonus_claims/{claimId} {
        allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // EVENTS
    match /events/{eventId} {
       allow read: if isAuth();
       allow write: if isAdmin();
    }
    match /event_enrollments/{enrollmentId} {
        allow read, write: if isAuth() || isAdmin();
    }

    match /users/{userId}/event_enrollments/{enrollmentId} {
      allow read, create, update: if isOwner(userId);
    }
    
    // Event progress history can only be created by functions, read by owner/admin
    match /users/{userId}/event_enrollments/{enrollmentId}/progress_history/{historyId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if false; // Only cloud functions
    }
    
    match /{path=**}/event_enrollments/{enrollmentId} {
        allow list: if isAdmin();
    }
  }
}
